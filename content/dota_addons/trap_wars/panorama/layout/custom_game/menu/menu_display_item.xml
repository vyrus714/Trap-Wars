<root>
    <styles><include src="file://{resources}/styles/custom_game/menu/menu_display_item.css" /></styles>

    <RadioButton class="display_item" group="display_items">
        <Panel class="display_bar_container">
            <Panel class="display_info_health dim_panel"><Label id="health" class="display_info_bar_text" /></Panel>
            <Panel class="bar_spacer" />
            <Panel class="display_info_mana   dim_panel"><Label id="mana"   class="display_info_bar_text" /></Panel>
        </Panel>

        <Panel class="display_info">
            <Panel class="display_info_stats">
                <Panel class="display_info_damage dim_panel"><Label id="damage" class="display_info_damage_text"     /></Panel>
                <Panel class="display_info_armor  dim_panel"><Label id="armor"  class="display_info_armorspeed_text" /></Panel>
                <Panel class="display_info_speed  dim_panel"><Label id="speed"  class="display_info_armorspeed_text" /></Panel>
            </Panel>

            <Panel id="skills" class="display_info_skill_container">
                <DOTAAbilityImage  id="skill_1" class="display_info_skill" abilityname="transparent_ability_icon" />
                <DOTAAbilityImage  id="skill_2" class="display_info_skill" abilityname="transparent_ability_icon" />
                <DOTAAbilityImage  id="skill_3" class="display_info_skill" abilityname="transparent_ability_icon" />
                <DOTAAbilityImage  id="skill_4" class="display_info_skill" abilityname="transparent_ability_icon" />
            </Panel>
        </Panel>
    </RadioButton>

</root>
